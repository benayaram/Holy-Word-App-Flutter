<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HolyWordApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/black</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_light</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/background_dark</item>
        <item name="colorOnSurface">@color/text_white</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_white</item>
        <item name="android:textColorSecondary">@color/text_hint</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        
        <!-- Custom attributes -->
        <item name="colorAccent">@color/accent_light</item>
        <item name="colorError">@color/error</item>
        <item name="colorSuccess">@color/success</item>
        <item name="colorWarning">@color/warning</item>
        <item name="colorInfo">@color/info</item>
        
        <!-- Typography -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.HolyWordApp.Headline1.Dark</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.HolyWordApp.Headline2.Dark</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.HolyWordApp.Headline3.Dark</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.HolyWordApp.Headline4.Dark</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.HolyWordApp.Headline5.Dark</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.HolyWordApp.Headline6.Dark</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.HolyWordApp.Subtitle1.Dark</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.HolyWordApp.Subtitle2.Dark</item>
        <item name="textAppearanceBody1">@style/TextAppearance.HolyWordApp.Body1.Dark</item>
        <item name="textAppearanceBody2">@style/TextAppearance.HolyWordApp.Body2.Dark</item>
        <item name="textAppearanceButton">@style/TextAppearance.HolyWordApp.Button.Dark</item>
        <item name="textAppearanceCaption">@style/TextAppearance.HolyWordApp.Caption.Dark</item>
        <item name="textAppearanceOverline">@style/TextAppearance.HolyWordApp.Overline.Dark</item>
    </style>
    
    <!-- Dark Typography styles -->
    <style name="TextAppearance.HolyWordApp.Headline1.Dark" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/text_white</item>
    </style>
    
    <style name="TextAppearance.HolyWordApp.Headline2.Dark" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/text_white</item>
    </style>
    
    <style name="TextAppearance.HolyWordApp.Headline3.Dark" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_white</item>
    </style>
    
    <style name="TextAppearance.HolyWordApp.Headline4.Dark" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/text_white</item>
    </style>
    
    <style name="TextAppearance.HolyWordApp.Headline5.Dark" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_white</item>
    </style>
    
    <style name="TextAppearance.HolyWordApp.Headline6.Dark" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_white</item>
    </style>
    
    <style name="TextAppearance.HolyWordApp.Subtitle1.Dark" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_hint</item>
    </style>
    
    <style name="TextAppearance.HolyWordApp.Subtitle2.Dark" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_hint</item>
    </style>
    
    <style name="TextAppearance.HolyWordApp.Body1.Dark" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_white</item>
    </style>
    
    <style name="TextAppearance.HolyWordApp.Body2.Dark" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_white</item>
    </style>
    
    <style name="TextAppearance.HolyWordApp.Button.Dark" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="TextAppearance.HolyWordApp.Caption.Dark" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <style name="TextAppearance.HolyWordApp.Overline.Dark" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textAllCaps">true</item>
    </style>
    
    <!-- Custom component styles for dark theme -->
    <style name="Widget.HolyWordApp.CardView.Dark" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/background_dark</item>
    </style>


        <!-- Modern Text Input Layout for Auth Screens -->
    <style name="Widget.HolyWordApp.TextInputLayout.Modern" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="startIconTint">@color/primary</item>
        <item name="endIconTint">@color/text_secondary</item>
        <item name="startIconMinSize">24dp</item>
        <item name="hintTextAppearance">@style/TextAppearance.HolyWordApp.Caption</item>
    </style>
</resources>
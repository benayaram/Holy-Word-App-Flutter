<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1">

    <ImageView
        android:id="@+id/imagePreview"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentTop="true"
        android:background="#FFF"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/verseTextOverlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sample Verse"
        android:textColor="#000"
        android:textSize="32sp"
        android:textStyle="bold"
        android:background="@android:color/transparent"
        android:layout_alignTop="@id/imagePreview"
        android:layout_alignStart="@id/imagePreview"
        android:layout_margin="24dp"
        android:textAlignment="center" />
    <TextView
        android:id="@+id/verseRefOverlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reference"
        android:textColor="#444"
        android:textSize="18sp"
        android:textStyle="italic"
        android:background="@android:color/transparent"
        android:layout_below="@id/verseTextOverlay"
        android:layout_alignStart="@id/verseTextOverlay"
        android:layout_marginTop="8dp"
        android:textAlignment="center" />

    <!-- Controls -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imagePreview">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <Button
                    android:id="@+id/btnChooseGallery"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Choose from Gallery" />

                <Spinner
                    android:id="@+id/ratioSpinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp" />

                <ImageButton
                    android:id="@+id/btnAlignLeft"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_media_previous"
                    android:background="@android:color/transparent"
                    android:contentDescription="Align Left"
                    android:layout_marginStart="8dp" />
                <ImageButton
                    android:id="@+id/btnAlignCenter"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_media_play"
                    android:background="@android:color/transparent"
                    android:contentDescription="Align Center" />
                <ImageButton
                    android:id="@+id/btnAlignRight"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_media_next"
                    android:background="@android:color/transparent"
                    android:contentDescription="Align Right" />
            </LinearLayout>

            <!-- Reference Controls Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reference Controls"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <Spinner
                    android:id="@+id/refFontSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/btnRefColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reference Color"
                    android:layout_marginTop="8dp" />
                <SeekBar
                    android:id="@+id/refTextSizeSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp" />
                <Spinner
                    android:id="@+id/refStyleSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

            <!-- Verse Controls Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verse Controls"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <Spinner
                    android:id="@+id/fontSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/btnTextColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Text Color"
                    android:layout_marginTop="8dp" />
                <SeekBar
                    android:id="@+id/textSizeSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Alignment controls -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp">
                <ImageButton
                    android:id="@+id/btnAlignLeft2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_media_previous"
                    android:background="@android:color/transparent"
                    android:contentDescription="Align Left" />
                <ImageButton
                    android:id="@+id/btnAlignCenter2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_media_play"
                    android:background="@android:color/transparent"
                    android:contentDescription="Align Center" />
                <ImageButton
                    android:id="@+id/btnAlignRight2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_media_next"
                    android:background="@android:color/transparent"
                    android:contentDescription="Align Right" />
            </LinearLayout>

            <!-- Aspect Ratio and Watermark Controls -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aspect Ratio" />

                <Spinner
                    android:id="@+id/ratioSpinner2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp" />

                <CheckBox
                    android:id="@+id/watermarkCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Show Watermark"
                    android:checked="true" />
            </LinearLayout>

            <Button
                android:id="@+id/btnExport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Export And Share"
                android:layout_marginTop="16dp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout> 
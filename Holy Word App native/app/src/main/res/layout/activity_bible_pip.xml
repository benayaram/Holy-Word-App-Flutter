<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bible_navy"
    android:padding="16dp"
    android:gravity="center">

    <!-- Audio Title -->
    <TextView
        android:id="@+id/tvPipTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Audio Bible"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Audio Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/btnPipPrevious"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_skip_previous"
            android:tint="@color/white"
            android:contentDescription="Previous Chapter" />

        <ImageButton
            android:id="@+id/btnPipPlayPause"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_round_button"
            android:src="@drawable/ic_play_vector"
            android:scaleType="fitCenter"
            android:padding="12dp"
            android:contentDescription="Play/Pause" />

        <ImageButton
            android:id="@+id/btnPipNext"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_skip_next"
            android:tint="@color/white"
            android:contentDescription="Next Chapter" />

    </LinearLayout>

    <!-- Progress Bar -->
    <SeekBar
        android:id="@+id/seekBarPip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:progressTint="@color/white"
        android:thumbTint="@color/white"
        android:progressBackgroundTint="@color/secondary" />

    <!-- Time Display -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/tvPipCurrentTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="00:00"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:gravity="start" />

        <TextView
            android:id="@+id/tvPipTotalTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:gravity="end" />

    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary">

    <!-- Decorative Circle 1 -->
    <View
        android:id="@+id/decorative_circle_1"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/decorative_circle"
        android:alpha="0.07"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="-100dp"
        android:layout_marginEnd="-50dp" />

    <!-- Decorative Circle 2 -->

    <!-- Main Content Container -->
    <View
        android:id="@+id/decorative_circle_2"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_marginStart="-50dp"
        android:layout_marginBottom="-75dp"
        android:alpha="0.03"
        android:background="@drawable/decorative_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4">

        <!-- App Logo with Shadow -->
        <FrameLayout
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginBottom="32dp">

            <!-- Shadow -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:background="@drawable/logo_shadow"
                android:alpha="0.1" />

            <!-- Logo -->
            <ImageView
                android:id="@+id/app_logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/logo"
                android:contentDescription="@string/app_name"
                android:padding="16dp"
                android:background="@drawable/logo_background" />

        </FrameLayout>

        <!-- App Name with Typography -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textAppearance="@style/TextAppearance.HolyWordApp.Headline2"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:layout_marginBottom="12dp" />

        <!-- Tagline with Better Typography -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/app_tagline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_tagline_text"
            android:textAppearance="@style/TextAppearance.HolyWordApp.Body1"
            android:textColor="@color/text_secondary"
            android:letterSpacing="0.05"
            android:layout_marginBottom="48dp" />

        <!-- Modern Loading Indicator -->
        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/loading_indicator"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminate="true"
            app:indicatorColor="@color/primary"
            app:trackColor="@color/divider"
            app:indicatorSize="48dp"
            app:trackThickness="4dp"
            android:layout_marginBottom="16dp" />

        <!-- Loading Text with Animation -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/loading_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading_spiritual_journey"
            android:textAppearance="@style/TextAppearance.HolyWordApp.Body2"
            android:textColor="@color/text_secondary"
            android:letterSpacing="0.02" />

    </LinearLayout>

    <!-- Bottom Info -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Version Info -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/version_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/version_1_0"
            android:textAppearance="@style/TextAppearance.HolyWordApp.Caption"
            android:textColor="@color/text_hint"
            android:layout_marginBottom="8dp" />

        <!-- Copyright -->
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/copyright_2025"
            android:textAppearance="@style/TextAppearance.HolyWordApp.Caption"
            android:textColor="@color/text_hint" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/alarm_background"
    android:gravity="center"
    android:padding="24dp">

    <!-- Header with Alarm Icon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="32dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_alarm"
            android:background="@drawable/bg_round_icon"
            android:padding="24dp"
            app:tint="@android:color/white"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/prayer_time"
            android:textAppearance="@style/TextAppearance.HolyWordApp.Headline4"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="28sp"
            android:gravity="center" />

    </LinearLayout>

    <!-- Alarm Details Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@android:color/white"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <!-- Alarm Name -->
            <TextView
                android:id="@+id/alarm_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Morning Prayer"
                android:textAppearance="@style/TextAppearance.HolyWordApp.Headline6"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginBottom="8dp"
                android:gravity="center" />

            <!-- Alarm Time -->
            <TextView
                android:id="@+id/alarm_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07:47"
                android:textAppearance="@style/TextAppearance.HolyWordApp.Headline3"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:textSize="36sp"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Current Time -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/current_time"
                android:textAppearance="@style/TextAppearance.HolyWordApp.Body2"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/current_time_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:30"
                android:textAppearance="@style/TextAppearance.HolyWordApp.Body1"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:gravity="center" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Bible Verse Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@android:color/white"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Verse Icon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_book"
                    android:layout_marginEnd="12dp"
                    app:tint="@color/primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/daily_verse"
                    android:textAppearance="@style/TextAppearance.HolyWordApp.Subtitle1"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:textSize="16sp" />

            </LinearLayout>

            <!-- Bible Verse Text -->
            <TextView
                android:id="@+id/bible_verse_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="For God so loved the world, that he gave his only begotten Son, that whosoever believeth in him should not perish, but have everlasting life."
                android:textAppearance="@style/TextAppearance.HolyWordApp.Body1"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="12dp"
                android:gravity="center" />

            <!-- Bible Reference -->
            <TextView
                android:id="@+id/bible_reference_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="John 3:16"
                android:textAppearance="@style/TextAppearance.HolyWordApp.Body2"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:textSize="14sp"
                android:gravity="center" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Snooze Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/snooze_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="12dp"
            android:text="@string/snooze"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:backgroundTint="@color/background_card"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_snooze"
            app:iconTint="@color/primary"
            app:iconGravity="textStart"
            android:paddingVertical="16dp"
            android:textAlignment="textStart"
            android:elevation="4dp" />

        <!-- Stop Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/stop_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:text="@string/stop_alarm"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/primary"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_stop"
            app:iconTint="@android:color/white"
            app:iconGravity="textStart"
            android:paddingVertical="16dp"
            android:textAlignment="textStart"
            android:elevation="4dp" />

    </LinearLayout>

</LinearLayout>
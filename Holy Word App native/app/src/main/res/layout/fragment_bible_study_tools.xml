<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bible_navy">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Welcome Text with Enhanced Styling -->
        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="@string/bible_study_tools_title"
            android:textAppearance="@style/TextAppearance.HolyWordApp.Headline4"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:shadowColor="@color/primary_dark"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="@string/bible_study_tools_subtitle"
            android:textAppearance="@style/TextAppearance.HolyWordApp.Body1"
            android:textColor="@color/white"
            android:gravity="center"
            android:alpha="0.9" />

        <!-- Grid Layout for Cards -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="3"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true">

            <!-- Bible Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/bible_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                app:cardCornerRadius="20dp"
                app:cardElevation="12dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/primary"
                android:clickable="true"
                android:focusable="true"
                app:rippleColor="@color/primary_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_rounded_thumbnail">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:src="@drawable/bible"
                        android:contentDescription="@string/bible_title"
                        android:scaleType="centerCrop"
                        android:background="@drawable/auth_gradient_background" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp"
                        android:gravity="center"
                        android:background="@color/white">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bible_title"
                            android:textAppearance="@style/TextAppearance.HolyWordApp.Headline5"
                            android:textColor="@color/primary"
                            android:textStyle="bold"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="@string/bible_description"
                            android:textAppearance="@style/TextAppearance.HolyWordApp.Body2"
                            android:textColor="@color/text_secondary"
                            android:gravity="center"
                            android:lineSpacingExtra="3dp" />

                        <!-- Action Button -->
                        <com.google.android.material.button.MaterialButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="@string/open_bible"
                            android:textSize="14sp"
                            app:cornerRadius="25dp"
                            app:backgroundTint="@color/primary"
                            android:textColor="@color/white"
                            android:minWidth="120dp"
                            android:minHeight="48dp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Cross References Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cross_references_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                app:cardCornerRadius="20dp"
                app:cardElevation="12dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/primary"
                android:clickable="true"
                android:focusable="true"
                app:rippleColor="@color/primary_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_rounded_thumbnail">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:src="@drawable/powerfulsearch"
                        android:contentDescription="@string/cross_references_title"
                        android:scaleType="centerCrop"
                        android:background="@drawable/auth_gradient_background" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp"
                        android:gravity="center"
                        android:background="@color/white">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cross_references_title"
                            android:textAppearance="@style/TextAppearance.HolyWordApp.Headline5"
                            android:textColor="@color/primary"
                            android:textStyle="bold"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="@string/cross_references_description"
                            android:textAppearance="@style/TextAppearance.HolyWordApp.Body2"
                            android:textColor="@color/text_secondary"
                            android:gravity="center"
                            android:lineSpacingExtra="3dp" />

                        <!-- Action Button -->
                        <com.google.android.material.button.MaterialButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="@string/find_references"
                            android:textSize="14sp"
                            app:cornerRadius="25dp"
                            app:backgroundTint="@color/primary"
                            android:textColor="@color/white"
                            android:minWidth="120dp"
                            android:minHeight="48dp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Audio Bible Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/audio_bible_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                app:cardCornerRadius="20dp"
                app:cardElevation="12dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/primary"
                android:clickable="true"
                android:focusable="true"
                app:rippleColor="@color/primary_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_rounded_thumbnail">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:src="@drawable/ic_volume_up"
                        android:contentDescription="@string/audio_bible_title"
                        android:scaleType="centerCrop"
                        android:background="@drawable/auth_gradient_background" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp"
                        android:gravity="center"
                        android:background="@color/white">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/audio_bible_title"
                            android:textAppearance="@style/TextAppearance.HolyWordApp.Headline5"
                            android:textColor="@color/primary"
                            android:textStyle="bold"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="@string/audio_bible_description"
                            android:textAppearance="@style/TextAppearance.HolyWordApp.Body2"
                            android:textColor="@color/text_secondary"
                            android:gravity="center"
                            android:lineSpacingExtra="3dp" />

                        <!-- Action Button -->
                        <com.google.android.material.button.MaterialButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="@string/listen_now"
                            android:textSize="14sp"
                            app:cornerRadius="25dp"
                            app:backgroundTint="@color/primary"
                            android:textColor="@color/white"
                            android:minWidth="120dp"
                            android:minHeight="48dp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Powerful Search Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/powerful_search_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                app:cardCornerRadius="20dp"
                app:cardElevation="12dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/primary"
                android:clickable="true"
                android:focusable="true"
                app:rippleColor="@color/primary_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_rounded_thumbnail">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:src="@drawable/ic_search"
                        android:contentDescription="@string/powerful_search_title"
                        android:scaleType="centerCrop"
                        android:background="@drawable/auth_gradient_background" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp"
                        android:gravity="center"
                        android:background="@color/white">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/powerful_search_title"
                            android:textAppearance="@style/TextAppearance.HolyWordApp.Headline5"
                            android:textColor="@color/primary"
                            android:textStyle="bold"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="@string/powerful_search_description"
                            android:textAppearance="@style/TextAppearance.HolyWordApp.Body2"
                            android:textColor="@color/text_secondary"
                            android:gravity="center"
                            android:lineSpacingExtra="3dp" />

                        <!-- Action Button -->
                        <com.google.android.material.button.MaterialButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="@string/search_now"
                            android:textSize="14sp"
                            app:cornerRadius="25dp"
                            app:backgroundTint="@color/primary"
                            android:textColor="@color/white"
                            android:minWidth="120dp"
                            android:minHeight="48dp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Bible Dictionary Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/bible_dictionary_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                app:cardCornerRadius="20dp"
                app:cardElevation="12dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/primary"
                android:clickable="true"
                android:focusable="true"
                app:rippleColor="@color/primary_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_rounded_thumbnail">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:src="@drawable/ic_translate"
                        android:contentDescription="@string/bible_dictionary_title"
                        android:scaleType="centerCrop"
                        android:background="@drawable/auth_gradient_background" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp"
                        android:gravity="center"
                        android:background="@color/white">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bible_dictionary_title"
                            android:textAppearance="@style/TextAppearance.HolyWordApp.Headline5"
                            android:textColor="@color/primary"
                            android:textStyle="bold"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="@string/bible_dictionary_description"
                            android:textAppearance="@style/TextAppearance.HolyWordApp.Body2"
                            android:textColor="@color/text_secondary"
                            android:gravity="center"
                            android:lineSpacingExtra="3dp" />

                        <!-- Action Button -->
                        <com.google.android.material.button.MaterialButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="@string/open_dictionary"
                            android:textSize="14sp"
                            app:cornerRadius="25dp"
                            app:backgroundTint="@color/primary"
                            android:textColor="@color/white"
                            android:minWidth="120dp"
                            android:minHeight="48dp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </GridLayout>

    </LinearLayout>
</ScrollView>

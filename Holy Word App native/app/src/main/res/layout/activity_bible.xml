<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1">

    <!-- Spinners Row -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:layout_marginBottom="8dp">

        <!-- Spinner Book -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <Spinner android:id="@+id/spinnerBook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"/>
        </androidx.cardview.widget.CardView>

        <!-- Spinner Chapter -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            app:cardCornerRadius="8dp"

            app:cardElevation="4dp">

            <Spinner android:id="@+id/spinnerChapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"/>
        </androidx.cardview.widget.CardView>

        <!-- Spinner Verse -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            app:cardCornerRadius="8dp"

            app:cardElevation="4dp">

            <Spinner android:id="@+id/spinnerVerse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"/>
        </androidx.cardview.widget.CardView>

        <!-- Translate Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <Button
                android:id="@+id/btnTranslate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/te"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@color/primary"
                android:textColor="@color/white"
                android:padding="10dp"
                android:minWidth="48dp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- RecyclerView Area -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewVerses"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"/>
    </androidx.cardview.widget.CardView>

    <!-- Contextual Action Bar for Multi-verse Selection -->
    <LinearLayout
        android:id="@+id/layoutMultiVerseActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:padding="12dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

        <ImageButton
            android:id="@+id/btnHighlight"
                android:layout_width="40dp"
                android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/highlight"
            android:contentDescription="Highlight"
                android:padding="4dp"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/highlight"
                android:textSize="10sp"
                android:textColor="#666666"
                android:layout_marginTop="2dp"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="4dp">

        <ImageButton
            android:id="@+id/btnAddNote"
                android:layout_width="40dp"
                android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/addnotes"
            android:contentDescription="Add Note"
                android:padding="4dp"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_note"
                android:textSize="10sp"
                android:textColor="#666666"
                android:layout_marginTop="2dp"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="4dp">

        <ImageButton
            android:id="@+id/btnShareText"
                android:layout_width="40dp"
                android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/sharetext"
            android:contentDescription="Share as Text"
                android:padding="4dp"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/share_text"
                android:textSize="10sp"
                android:textColor="#666666"
                android:layout_marginTop="2dp"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="4dp">

        <ImageButton
            android:id="@+id/btnShareImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/shareimage"
            android:contentDescription="Share as Image"
                android:padding="4dp"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/share_image"
                android:textSize="10sp"
                android:textColor="#666666"
                android:layout_marginTop="2dp"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="4dp">

        <ImageButton
            android:id="@+id/btnCopy"
                android:layout_width="40dp"
                android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/copy"
            android:contentDescription="Copy"
                android:padding="4dp"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/copy"
                android:textSize="10sp"
                android:textColor="#666666"
                android:layout_marginTop="2dp"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="4dp">

        <ImageButton
            android:id="@+id/btnCrossReferences"
                android:layout_width="36dp"
                android:layout_height="36dp"
            android:background="@android:color/transparent"
            android:src="@drawable/link"
            android:tint="#000000"
            android:contentDescription="Cross References"
                android:padding="6dp"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cross_ref"
                android:textSize="10sp"
                android:textColor="#666666"
                android:layout_marginTop="2dp"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

    <!-- Bottom Audio Player -->
    <LinearLayout
        android:id="@+id/layoutAudioPlayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/bible_navy"
        android:visibility="gone"
        android:elevation="8dp">

        <!-- Audio Player Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvAudioTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/audio_bible"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnCloseAudio"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_close"
                android:tint="@color/white"
                android:contentDescription="Close Audio Player" />

        </LinearLayout>

        <!-- Audio Controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btnPreviousChapter"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_skip_previous"
                app:tint="@color/white"
                android:contentDescription="Previous Chapter" />

                        <ImageButton
                android:id="@+id/btnPlayPause"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_round_button"
                android:src="@drawable/ic_play_vector"
                android:scaleType="fitCenter"
                android:padding="12dp"
                app:tint="@color/white"
                android:contentDescription="Play/Pause" />

            <ImageButton
                android:id="@+id/btnNextChapter"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_skip_next"
                app:tint="@color/white"
                android:contentDescription="Next Chapter" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <SeekBar
                    android:id="@+id/seekBarAudio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:progressTint="@color/white"
                    android:thumbTint="@color/white"
                    android:progressBackgroundTint="@color/secondary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/tvCurrentTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/time_placeholder"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvTotalTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/time_placeholder"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

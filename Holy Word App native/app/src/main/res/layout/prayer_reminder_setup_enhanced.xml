<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/prayer_reminder_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_alarm"
                android:layout_marginEnd="16dp"
                app:tint="@android:color/white" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/set_prayer_reminder"
                    android:textAppearance="@style/TextAppearance.HolyWordApp.Headline5"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/prayer_reminder_description"
                    android:textAppearance="@style/TextAppearance.HolyWordApp.Body2"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:alpha="0.8" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/close_reminder_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_close"
                android:background="@drawable/bg_round_icon"
                android:padding="8dp"
                app:tint="@android:color/white" />

        </LinearLayout>

        <!-- Alarm Name Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@android:color/white"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_label"
                        android:layout_marginEnd="12dp"
                        app:tint="@color/primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/alarm_name"
                        android:textAppearance="@style/TextAppearance.HolyWordApp.Subtitle1"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_reminder_name"
                    app:boxStrokeColor="@color/primary"
                    app:hintTextColor="@color/primary"
                    app:startIconDrawable="@drawable/ic_label"
                    app:startIconTint="@color/primary"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/reminder_name_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary"
                        android:inputType="textCapWords|textAutoCorrect"
                        android:capitalize="words"
                        android:maxLines="1" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Time Selection Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@android:color/white"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_access_time"
                        android:layout_marginEnd="12dp"
                        app:tint="@color/primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/reminder_time"
                        android:textAppearance="@style/TextAppearance.HolyWordApp.Subtitle1"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/time_picker_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/select_time"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:backgroundTint="@color/background_card"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_access_time"
                    app:iconTint="@color/primary"
                    app:iconGravity="textStart"
                    android:paddingVertical="16dp"
                    android:textAlignment="textStart"
                    android:elevation="2dp" />

                <TextView
                    android:id="@+id/selected_time_display"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="12:00"
                    android:textAppearance="@style/TextAppearance.HolyWordApp.Headline6"
                    android:textColor="@color/primary"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_round_icon"
                    android:padding="16dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Days Selection Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@android:color/white"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_calendar_today"
                        android:layout_marginEnd="12dp"
                        app:tint="@color/primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/select_days"
                        android:textAppearance="@style/TextAppearance.HolyWordApp.Subtitle1"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                </LinearLayout>

                <!-- Days Grid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Weekdays Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/sunday_chip"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="6dp"
                            android:text="Sun"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            app:chipBackgroundColor="@color/background_card"
                            app:chipStrokeColor="@color/primary"
                            app:chipStrokeWidth="2dp"
                            app:checkedIcon="@drawable/ic_check"
                            app:checkedIconTint="@android:color/white"
                            app:chipMinHeight="56dp"
                            style="@style/Widget.MaterialComponents.Chip.Choice" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/monday_chip"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="6dp"
                            android:text="Mon"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            app:chipBackgroundColor="@color/background_card"
                            app:chipStrokeColor="@color/primary"
                            app:chipStrokeWidth="2dp"
                            app:checkedIcon="@drawable/ic_check"
                            app:checkedIconTint="@android:color/white"
                            app:chipMinHeight="56dp"
                            style="@style/Widget.MaterialComponents.Chip.Choice" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/tuesday_chip"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="6dp"
                            android:text="Tue"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            app:chipBackgroundColor="@color/background_card"
                            app:chipStrokeColor="@color/primary"
                            app:chipStrokeWidth="2dp"
                            app:checkedIcon="@drawable/ic_check"
                            app:checkedIconTint="@android:color/white"
                            app:chipMinHeight="56dp"
                            style="@style/Widget.MaterialComponents.Chip.Choice" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/wednesday_chip"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="6dp"
                            android:text="Wed"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            app:chipBackgroundColor="@color/background_card"
                            app:chipStrokeColor="@color/primary"
                            app:chipStrokeWidth="2dp"
                            app:checkedIcon="@drawable/ic_check"
                            app:checkedIconTint="@android:color/white"
                            app:chipMinHeight="56dp"
                            style="@style/Widget.MaterialComponents.Chip.Choice" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/thursday_chip"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="6dp"
                            android:text="Thu"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            app:chipBackgroundColor="@color/background_card"
                            app:chipStrokeColor="@color/primary"
                            app:chipStrokeWidth="2dp"
                            app:checkedIcon="@drawable/ic_check"
                            app:checkedIconTint="@android:color/white"
                            app:chipMinHeight="56dp"
                            style="@style/Widget.MaterialComponents.Chip.Choice" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/friday_chip"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="6dp"
                            android:text="Fri"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            app:chipBackgroundColor="@color/background_card"
                            app:chipStrokeColor="@color/primary"
                            app:chipStrokeWidth="2dp"
                            app:checkedIcon="@drawable/ic_check"
                            app:checkedIconTint="@android:color/white"
                            app:chipMinHeight="56dp"
                            style="@style/Widget.MaterialComponents.Chip.Choice" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/saturday_chip"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:layout_marginStart="6dp"
                            android:text="Sat"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            app:chipBackgroundColor="@color/background_card"
                            app:chipStrokeColor="@color/primary"
                            app:chipStrokeWidth="2dp"
                            app:checkedIcon="@drawable/ic_check"
                            app:checkedIconTint="@android:color/white"
                            app:chipMinHeight="56dp"
                            style="@style/Widget.MaterialComponents.Chip.Choice" />

                    </LinearLayout>

                    <!-- Quick Selection Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/weekdays_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="Weekdays"
                            android:textSize="12sp"
                            android:textColor="@color/primary"
                            android:backgroundTint="@color/background_card"
                            app:cornerRadius="8dp"
                            android:paddingVertical="8dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/weekends_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="8dp"
                            android:text="Weekends"
                            android:textSize="12sp"
                            android:textColor="@color/primary"
                            android:backgroundTint="@color/background_card"
                            app:cornerRadius="8dp"
                            android:paddingVertical="8dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/all_days_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="All Days"
                            android:textSize="12sp"
                            android:textColor="@color/primary"
                            android:backgroundTint="@color/background_card"
                            app:cornerRadius="8dp"
                            android:paddingVertical="8dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancel_reminder_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="12dp"
                android:text="@string/cancel"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:backgroundTint="@color/background_card"
                app:cornerRadius="16dp"
                android:paddingVertical="16dp"
                android:elevation="4dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/save_reminder_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="@string/save_reminder"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/primary"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_save"
                app:iconTint="@android:color/white"
                app:iconGravity="textStart"
                android:paddingVertical="16dp"
                android:textAlignment="textStart"
                android:elevation="4dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>

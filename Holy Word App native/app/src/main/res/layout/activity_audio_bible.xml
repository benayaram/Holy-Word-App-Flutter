<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bible_navy">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="32dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_volume_up"
                    android:contentDescription="Audio Bible"
                    android:background="@drawable/circle_background"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/audio_bible"
                    android:textAppearance="@style/TextAppearance.HolyWordApp.Headline4"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/listen_to_word_of_god"
                    android:textAppearance="@style/TextAppearance.HolyWordApp.Body1"
                    android:textColor="@color/white"
                    android:alpha="0.9"
                    android:gravity="center"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

            <!-- Language Selection Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/primary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/language_selection"
                        android:textAppearance="@style/TextAppearance.HolyWordApp.Headline6"
                        android:textColor="@color/primary"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/current_language"
                            android:textAppearance="@style/TextAppearance.HolyWordApp.Body1"
                            android:textColor="@color/text_primary" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_translate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/en"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:cornerRadius="25dp"
                            app:backgroundTint="@color/primary"
                            android:textColor="@color/white"
                            android:minWidth="80dp"
                            android:minHeight="48dp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Book and Chapter Selection Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/primary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/select_book_and_chapter"
                        android:textAppearance="@style/TextAppearance.HolyWordApp.Headline6"
                        android:textColor="@color/primary"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Book Selection -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/book_label"
                        android:textAppearance="@style/TextAppearance.HolyWordApp.Body1"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="8dp" />

                    <Spinner
                        android:id="@+id/book_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/spinner_background"
                        android:layout_marginBottom="16dp" />

                    <!-- Chapter Selection -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/chapter_label"
                        android:textAppearance="@style/TextAppearance.HolyWordApp.Body1"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="8dp" />

                    <Spinner
                        android:id="@+id/chapter_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/spinner_background"
                        android:layout_marginBottom="16dp" />

                    <!-- Play Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_play"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/play_audio"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:cornerRadius="25dp"
                        app:backgroundTint="@color/primary"
                        android:textColor="@color/white"
                        android:minHeight="56dp"
                        app:icon="@drawable/ic_play_arrow"
                        app:iconGravity="textStart" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Instructions Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/primary_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="How to Use"
                        android:textAppearance="@style/TextAppearance.HolyWordApp.Headline6"
                        android:textColor="@color/primary"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1. Select your preferred language (Telugu or English)\n2. Choose a book from the Bible\n3. Select a chapter\n4. Tap 'Play Audio' to start listening\n5. Use the audio player controls to pause, skip, or seek"
                        android:textAppearance="@style/TextAppearance.HolyWordApp.Body2"
                        android:textColor="@color/text_secondary"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

    <!-- Audio Player (Hidden by default) -->
    <LinearLayout
        android:id="@+id/layout_audio_player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/primary_dark"
        android:padding="16dp"
        android:visibility="gone">

        <!-- Audio Title -->
        <TextView
            android:id="@+id/tv_audio_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Audio Title"
            android:textAppearance="@style/TextAppearance.HolyWordApp.Headline6"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <!-- Seek Bar -->
        <SeekBar
            android:id="@+id/seek_bar_audio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:progressTint="@color/white"
            android:thumbTint="@color/white" />

        <!-- Time Display -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tv_current_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="00:00"
                android:textAppearance="@style/TextAppearance.HolyWordApp.Body2"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_total_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="00:00"
                android:textAppearance="@style/TextAppearance.HolyWordApp.Body2"
                android:textColor="@color/white"
                android:gravity="end" />

        </LinearLayout>

        <!-- Control Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btn_previous_chapter"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_skip_previous"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Previous Chapter"
                android:tint="@color/white"
                android:layout_marginEnd="16dp" />

            <ImageButton
                android:id="@+id/btn_play_pause"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_play_arrow"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Play/Pause"
                android:tint="@color/white"
                android:layout_marginHorizontal="16dp" />

            <ImageButton
                android:id="@+id/btn_next_chapter"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_skip_next"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Next Chapter"
                android:tint="@color/white"
                android:layout_marginStart="16dp" />

            <ImageButton
                android:id="@+id/btn_close_audio"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_close"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Close Audio Player"
                android:tint="@color/white"
                android:layout_marginStart="16dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
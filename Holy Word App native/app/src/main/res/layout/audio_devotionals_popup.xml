<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="32dp"
    android:background="@drawable/audio_popup_background">

    <!-- Header with Close Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/audio_devotionals"
            android:textAppearance="@style/TextAppearance.HolyWordApp.Headline5"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:textSize="24sp"
            android:gravity="center" />

        <ImageButton
            android:id="@+id/close_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_round_icon"
            android:contentDescription="@string/close"
            android:padding="8dp"
            app:tint="@color/text_secondary"
            android:src="@drawable/ic_close"
            android:scaleType="centerInside" />
    </LinearLayout>

    <!-- Audio Info Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@android:color/white"
        app:strokeWidth="1dp"
        app:strokeColor="@color/divider">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/audio_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Daily Audio Devotional"
                android:textAppearance="@style/TextAppearance.HolyWordApp.Body1"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:id="@+id/audio_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAppearance="@style/TextAppearance.HolyWordApp.Body2"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:gravity="center" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Progress Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:orientation="vertical">

        <!-- Progress Bar -->
        <SeekBar
            android:id="@+id/audio_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:progress="0"
            android:max="100"
            android:progressTint="@color/primary"
            android:thumbTint="@color/primary"
            android:progressBackgroundTint="@color/divider" />

        <!-- Time Labels -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/current_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0:00"
                android:textAppearance="@style/TextAppearance.HolyWordApp.Caption"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/total_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0:00"
                android:textAppearance="@style/TextAppearance.HolyWordApp.Caption"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="end" />
        </LinearLayout>
    </LinearLayout>

    <!-- Control Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/rewind_button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/audio_control_background"
            android:contentDescription="@string/rewind"
            android:padding="16dp"
            app:tint="@color/primary"
            android:src="@drawable/ic_replay_10"
            android:scaleType="centerInside" />

        <ImageButton
            android:id="@+id/play_pause_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/audio_play_background"
            android:contentDescription="@string/play"
            android:padding="20dp"
            app:tint="@android:color/white"
            android:src="@drawable/ic_play_arrow"
            android:scaleType="centerInside" />

        <ImageButton
            android:id="@+id/forward_button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="24dp"
            android:background="@drawable/audio_control_background"
            android:contentDescription="@string/forward"
            android:padding="16dp"
            app:tint="@color/primary"
            android:src="@drawable/ic_forward_10"
            android:scaleType="centerInside" />
    </LinearLayout>

    <!-- Loading Indicator -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/audio_loading"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:indeterminate="true"
        app:indicatorColor="@color/primary"
        app:trackColor="@color/divider"
        android:visibility="gone" />

    <!-- Error Message -->
    <TextView
        android:id="@+id/audio_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/audio_error"
        android:textAppearance="@style/TextAppearance.HolyWordApp.Body2"
        android:textColor="@color/error"
        android:textSize="14sp"
        android:gravity="center"
        android:visibility="gone" />

</LinearLayout>

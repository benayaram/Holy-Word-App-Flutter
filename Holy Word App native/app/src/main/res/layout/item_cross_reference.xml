<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Reference Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <!-- Type Badge -->
            <TextView
                android:id="@+id/tvReferenceType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reference"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/bg_round_button"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_marginEnd="8dp" />

            <!-- Reference Location -->
            <TextView
                android:id="@+id/tvReferenceLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Book Chapter:Verse"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/bible_navy" />

            <!-- Click to View Button -->
            <Button
                android:id="@+id/btnViewReference"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="View"
                android:textSize="10sp"
                android:minHeight="32dp"
                android:minWidth="0dp"
                android:background="@drawable/bg_round_button"
                android:textColor="@color/white"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />

        </LinearLayout>

        <!-- Reference Text -->
        <TextView
            android:id="@+id/tvReferenceText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reference text will appear here..."
            android:textSize="12sp"
            android:textColor="@color/text_primary"
            android:lineSpacingExtra="2dp"
            android:layout_marginBottom="8dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginTop="4dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>


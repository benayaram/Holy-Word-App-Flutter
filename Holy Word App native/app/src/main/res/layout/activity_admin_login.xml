<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    android:padding="24dp">

    <!-- Decorative Circle 1 -->
    <View
        android:id="@+id/decorative_circle_1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/decorative_circle"
        android:alpha="0.05"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="-50dp"
        android:layout_marginEnd="-30dp" />

    <!-- Decorative Circle 2 -->
    <View
        android:id="@+id/decorative_circle_2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="-30dp"
        android:layout_marginBottom="-50dp"
        android:alpha="0.03"
        android:background="@drawable/decorative_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Main Content Container -->
    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3">

        <!-- App Logo -->
        <ImageView
            android:id="@+id/admin_login_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            android:layout_marginBottom="24dp" />

        <!-- Admin Login Title -->
        <TextView
            android:id="@+id/admin_login_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/admin_login"
            android:textAppearance="@style/TextAppearance.HolyWordApp.Headline4"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/admin_login_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_admin_credentials"
            android:textAppearance="@style/TextAppearance.HolyWordApp.Body1"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="32dp" />

        <!-- Email Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="@string/email"
            app:startIconDrawable="@drawable/ic_email"
            app:boxStrokeColor="@color/primary"
            app:hintTextColor="@color/primary"
            app:startIconTint="@color/primary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Password Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:hint="@string/password"
            app:startIconDrawable="@drawable/ic_lock"
            app:endIconDrawable="@drawable/ic_visibility"
            app:endIconMode="password_toggle"
            app:boxStrokeColor="@color/primary"
            app:hintTextColor="@color/primary"
            app:startIconTint="@color/primary"
            app:endIconTint="@color/primary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Login Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/admin_login"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="@color/primary"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_login"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Forgot Password Link -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/forgot_password_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forgot_password"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            android:layout_marginBottom="24dp" />

        <!-- Back to User Dashboard Link -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/back_to_user_dashboard_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back_to_user_dashboard"
            android:textColor="@color/text_secondary"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
